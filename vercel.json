{
  "functions": {
    "api/index.py": {
      "runtime": "python3.9",
      "maxDuration": 300,
      "memory": 3008
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task"
  }
}
"crons": [
  {
    "path": "/api/cron",
    "schedule": "0 * * * *"  // هر ساعت
  }
]
